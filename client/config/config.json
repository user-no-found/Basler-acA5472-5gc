{
  "protocol_version": "2.0",
  "tcp": {
    "host": "0.0.0.0",
    "port": 8899,
    "timeout": 30,
    "max_clients": 5
  },
  "camera": {
    "serial": "",
    "default_exposure": 10000,
    "default_gain": 100,
    "reconnect_interval": 5,
    "grab_timeout": 5000
  },
  "storage": {
    "image_path": "./images",
    "video_path": "./videos",
    "image_format": "jpg",
    "jpeg_quality": 95
  },
  "preview": {
    "default_resolution": [1920, 1080],
    "default_fps": 10,
    "jpeg_quality": 80,
    "max_fps": 30
  },
  "video": {
    "codec": "H264",
    "default_fps": 5,
    "supported_resolutions": [
      [1920, 1080],
      [1280, 720],
      [640, 480]
    ]
  }
}
